{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "allowJs": true,
    "paths": {
      "@auth/*": [
        "auth/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@constants/*": [
        "constants/*"
      ],
      "@core/*": [
        "core/*"
      ],
      "@entities/*": [
        "entities/*"
      ],
      "@guard/*": [
        "guard/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@algorithms/*": [
        "algorithms/*"
      ],
      "@features/*": [
        "features/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}